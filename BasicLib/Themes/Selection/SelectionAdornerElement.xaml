<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BasicLib">
    <Style TargetType="{x:Type local:SelectionAdornerElement}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SelectionAdornerElement}">
                    <Rectangle Fill="Transparent" Margin="3" Stroke="LightCoral" StrokeDashArray="3" StrokeThickness="1">
                        <Rectangle.Effect>
                            <DropShadowEffect BlurRadius="1" Direction="300" ShadowDepth="1" Opacity="0.5"/>
                        </Rectangle.Effect>
                    </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>