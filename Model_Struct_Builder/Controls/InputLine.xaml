<UserControl x:Class="Model_Struct_Builder.InputLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Model_Struct_Builder"
             mc:Ignorable="d" 
             Name="input">
    <StackPanel Orientation="Horizontal">
        <TextBlock FontSize="15" MinWidth="30" VerticalAlignment="Center" Text="{Binding ElementName=input ,Path=InputName,Mode=TwoWay}"></TextBlock>
        <TextBox FontSize="15" MinWidth="60" VerticalAlignment="Center" Margin="10,0" Text="{Binding ElementName=input ,Path=InputText}" Width="{Binding ElementName=input,Path=InputAreaWidth}"></TextBox>
    </StackPanel>
</UserControl>
